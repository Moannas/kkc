button {
    margin: 0
}

button::after {
    width: 0;
    height: 0
}

button[disabled][type="default"],
wx-button[disabled]:not([type]) {
    background-color: #fff !important
}
page{
    width: 100%;
    height: 100%;
    background: #fff;
}
.head-tab {
    position: fixed;
    justify-content: space-around;
    flex-wrap: nowrap;
    width: 100%;
    height: 88rpx;
    border-bottom: 1px solid #ddd;
    background-color: #fff;
    z-index: 99
}
.choosed-container{
    width: 100%;
    height: 100%;
    background: #f3f3f3;
}
.head-item {
    position: relative;
    width: 186rpx;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    background: none;
}
scroll-view{
    background: #f3f3f3;
}
.choosed-list{
    position: absolute;
    top: 188rpx;
    width: 100%;
    z-index: 210;
    background: none;
    margin-bottom: 250rpx;
}
/* 重定义选项卡样式 */
.choosed{
    position: fixed;
    top: 0;
    left: 0;
    justify-content: space-around;
    flex-wrap: nowrap;
    width: 100%;
    height: 88rpx;
    border-bottom: 1px solid #ddd;
    background:linear-gradient(-71deg,rgba(125,28,234,1),rgba(205,86,255,1));
    z-index: 220;
}
.choose-block{
    position: fixed;
    top: 179rpx;
    width: 100%;
    height: 83rpx;
    z-index: 200;
    background:linear-gradient(-71deg,rgba(125,28,234,1),rgba(205,86,255,1));
}
.choose-active{
    color: #fff;
    width: 50%;
    border-bottom: 2px solid #fff;
}
.choose-no{
    color: #fff;
    opacity: 0.5;
    width: 50%;
    border-bottom: 2px solid #fff;
}
/*正在播放*/
.icon-music{
    position: fixed;
    top: 89rpx;
    z-index: 300;
    width: 100%;
    height: 90rpx;
    background:linear-gradient(-71deg,rgba(125,28,234,1),rgba(205,86,255,1));
}
.icon-playing{
    width: 50rpx;
    height: 40rpx;
    background: none;
    margin-left: 31rpx;
    margin-top: 20rpx;
    float: left;
    position: relative;
}

.icon-line1{
    position: absolute;
    bottom: 0;
    height: 20rpx;
    left: 15rpx;
    width: 5rpx;
    background: #fff;
    animation: line1 0.4s infinite;
}
.icon-line2{
    position: absolute;
    bottom: 0;
    height: 27rpx;
    width: 5rpx;
    left: 23rpx;
    background: #fff;
    animation: line2 0.3s infinite;
}
.icon-line3{
    position: absolute;
    bottom: 0;
    height: 12rpx;
    width: 5rpx;
    left: 32rpx;
    background: #fff;
    animation: line3 0.4s infinite;
}
.icon-line4{
    position: absolute;
    bottom: 0;
    height: 30rpx;
    width: 5rpx;
    left: 40rpx;
    background: #fff;
    animation: line4 0.3s infinite;
}
/*正在播放歌曲*/
.song-word{
    float: left;
    width: 600rpx;
    height: 40rpx;
    margin-left: 31rpx;
    margin-top: 30rpx;
    font-size:30rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(255,255,255,1);
    background: none;
    letter-spacing: 1rpx;
    white-space:nowrap;
    position: absolute;
    animation: horse 10s linear infinite;
}
@keyframes line1{
    50%{
        height: 5rpx;
    }
    100%{
        height: 20rpx;
    }
}
@keyframes line2{
    50%{
        height: 25rpx;
    }
    100%{
        height: 15rpx;
    }
}

@keyframes line3{
    50%{
        height: 30rpx;
    }
    100%{
        height: 15rpx;
    }
}

@keyframes line4{
    50%{
        height: 20rpx;
    }
    100%{
        height: 16rpx;
    }
}
@keyframes horse
{
    0%   {left:720rpx;top:0rpx;}
    100%  {left:100rpx;top:0rpx;}
}



