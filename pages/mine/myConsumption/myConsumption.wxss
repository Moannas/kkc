.main,.mine-container {
    background: none
}
.top {
    width: 100%;
    height: 440rpx;
    background: linear-gradient(to right, #d80af9, rgb(50, 12, 243) 100%);
    position: relative;
}
.centre {
    text-align: center;
    background: none;
}
.head {
    width: 162rpx;
    height: 162rpx;
    border-radius: 50%;
    background: #c987fc;
    margin: 34rpx auto 12rpx auto;
    position: relative;
}
.head image {
    width: 150rpx;
    height: 150rpx;
    display: block;
    border-radius: 50%;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}
.header-img {
    overflow:hidden;  
    display: block; 
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}

.nick-name {
    font-size: 28rpx;
    color: #fff
}
.name {
    font-size: 28rpx;
    color: #fff;
}
.roomviewnk{
    margin-top: 10rpx;
    background: none;
    display: flex;
    align-items: center;
    justify-content: center
}
.tex {
    font-size: 24rpx;
    color: #cea6fc;
    margin-right: 10rpx
}
.texroom {
    font-size: 36rpx;
    color: #ffffff;
}
.link {
    width: 44rpx;
    height: 19rpx;
    display: inline-block;
    margin-left: 18rpx;
}
.nolink{
    width: 44rpx;
    height: 45rpx;
}
.top_bottom{
    width: 100%;
    height:115rpx ;
    margin-top:22rpx;
    background: none;
    position: relative;
    text-align: center;
    display: flex;
    align-items: center
}
.top_bottom view{
    background: none;
    color: #fff;
 }
.top_bottom .black_background{
    width: 100%;
    height: 100%;
    background: black;
    opacity: 0.1;
    position: absolute;
    top: 0;
    left: 0;
}
.top_bottom>view{
   float: left;
   color: #fff;
   background: none;
}
.top_bottom .width2{
    width: 3rpx;
    height: 47rpx;
