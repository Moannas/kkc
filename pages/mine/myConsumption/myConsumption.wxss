    float: left;
    border-radius: 20rpx;
    font-size: 30rpx;
    font-family:"PingFang-SC-Medium";
    font-weight:500;
    color: #030139
}
.bottom .settle_accounts{
    background: linear-gradient(to right, #942DF0, #CD56FF 100%);
    color: #fff;
}
.bottom image{
    width: 180rpx;
    height: 180rpx;
    display: block;
    margin: 30rpx auto 17rpx auto;
}












